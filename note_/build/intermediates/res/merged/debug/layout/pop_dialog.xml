<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/pd_width"
    android:layout_height="@dimen/pd_height"
    android:layout_gravity="center">

    <ImageView
        android:id="@+id/iv_face"
        android:layout_width="@dimen/pd_iv_face_width"
        android:layout_height="@dimen/pd_iv_face_height"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dip"
        android:src="@drawable/success"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/tv_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/iv_face"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="18dip"
        android:layout_marginTop="5dip"
        android:gravity="center"
        android:text="@string/record_success"
        android:textColor="@android:color/white" />

</RelativeLayout>


