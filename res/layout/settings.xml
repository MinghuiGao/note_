        android:layout_width="match_parent"
        android:layout_height="@dimen/settings_rl_about_us_height"
        android:background="@drawable/setting_bg_selector" >

        <ImageView
            android:id="@+id/iv_logo_recommand"
            android:layout_width="@dimen/settings_rl_bind_yinxiang_iv_logo_width"
            android:layout_height="@dimen/settings_rl_bind_yinxiang_iv_logo_height"
