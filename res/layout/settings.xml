            android:id="@+id/iv_logo"
            android:layout_width="@dimen/settings_rl_bind_yinxiang_iv_logo_width"
            android:layout_height="@dimen/settings_rl_bind_yinxiang_iv_logo_height"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dip"
            android:src="@drawable/yinxiang_logo" />

        <TextView
            android:id="@+id/tv_logo_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dip"
            android:layout_toRightOf="@id/iv_logo"
            android:text="@string/yinxiang"
            android:textColor="#313131"
            android:textSize="@dimen/settings_rl_bind_yinxiang_tv_logo_info_textsize" />

        <Button
            android:id="@+id/bt_logo_next"
            android:layout_width="@dimen/settings_rl_bind_yinxiang_bt_logo_next_width"
            android:layout_height="@dimen/settings_rl_bind_yinxiang_bt_logo_next_height"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dip"
            android:background="@drawable/setting_next" />

        <TextView
            android:id="@+id/tv_yinxiang_bind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dip"
            android:layout_toLeftOf="@id/bt_logo_next"
            android:text="bind_"
            android:textColor="@color/normal"
            android:textSize="@dimen/settings_rl_bind_yinxiang_tv_logo_info_textsize" />
    </RelativeLayout>
