<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ebebeb"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/rl_setting_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/settings_header_height"
		 android:background="@color/header_bg"
         >

        <ImageView
            android:id="@+id/iv_setting_back"
            android:layout_width="@dimen/settings_header_iv_setting_back_width"
            android:layout_height="@dimen/settings_header_iv_setting_back_height"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/setting_backward_" />

        <LinearLayout
            android:id="@+id/ll_header"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:orientation="horizontal"
            android:src="@drawable/setting_backward" >
        </LinearLayout>

        <TextView
            android:id="@+id/tv_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/setting"
            android:textColor="@color/title"
            android:textSize="@dimen/settings_header_tv_header_textsize" />
        
    </RelativeLayout>
        	<ImageView 
	    android:layout_width="match_parent"
	    android:layout_height="@dimen/divider_height"
	    android:background="@color/devider"
	    />
    <RelativeLayout
        android:id="@+id/ll_blank_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/settings_ll_blank_top_height"
        android:background="@android:color/transparent"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_yinxiang_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="4dip"
            android:layout_marginLeft="15dip"
            android:text="@string/bind_setting_title"
            android:textColor="#a0a0a0"
            android:textSize="@dimen/settings_ll_blank_top_textsize" />
    </RelativeLayout>
        	<ImageView 
	    android:layout_width="match_parent"
	    android:layout_height="1px"
	    android:background="@color/devider"
	    />
    <RelativeLayout
